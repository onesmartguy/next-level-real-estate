# Test Environment Configuration
# This file contains environment variables for testing

# Node Environment
NODE_ENV=test
LOG_LEVEL=error

# Test Database Configuration
MONGODB_URI=mongodb://localhost:27017/test_next_level_real_estate
MONGODB_TEST_DB=test_next_level_real_estate
USE_TEST_CONTAINERS=false

# Redis Configuration (for caching tests)
REDIS_URL=redis://localhost:6379
REDIS_DB=1

# Kafka Configuration (mocked in tests)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=test-client
KAFKA_GROUP_ID=test-group

# API Keys (use test/mock values)
TWILIO_ACCOUNT_SID=test_account_sid
TWILIO_AUTH_TOKEN=test_auth_token
TWILIO_PHONE_NUMBER=+15555555555

ELEVENLABS_API_KEY=test_elevenlabs_key
ELEVENLABS_AGENT_ID=test_agent_id

CLAUDE_API_KEY=test_claude_key
ANTHROPIC_API_KEY=test_anthropic_key

# Google Ads API (test credentials)
GOOGLE_ADS_DEVELOPER_TOKEN=test_developer_token
GOOGLE_ADS_CLIENT_ID=test_client_id
GOOGLE_ADS_CLIENT_SECRET=test_client_secret
GOOGLE_ADS_REFRESH_TOKEN=test_refresh_token

# Zillow API (test credentials)
ZILLOW_ZWSID=test_zillow_id
ZILLOW_WEBHOOK_SECRET=test_zillow_secret

# RealGeeks API (test credentials)
REALGEEKS_API_USERNAME=test_username
REALGEEKS_API_PASSWORD=test_password

# Vector Database (Qdrant) - test instance
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=test_qdrant_key
QDRANT_COLLECTION=test_knowledge_base

# JWT Configuration (for auth tests)
JWT_SECRET=test_jwt_secret_key_for_testing_only
JWT_EXPIRATION=1h

# Rate Limiting (relaxed for tests)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# TCPA Compliance Testing
DNC_REGISTRY_API_KEY=test_dnc_key
DNC_CHECK_ENABLED=true

# OpenTelemetry (disabled in tests)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=next-level-real-estate-test
OTEL_TRACES_SAMPLER=always_off

# Test-specific flags
MOCK_EXTERNAL_APIS=true
ENABLE_TEST_LOGGING=false
VERBOSE_TESTS=false
FAIL_FAST=false

# Performance test configuration
LOAD_TEST_DURATION=30
LOAD_TEST_VUS=10
LOAD_TEST_TARGET_RPS=100

# Test data configuration
TEST_DATA_SEED=true
TEST_DATA_CLEANUP=true

# Timeouts (in milliseconds)
API_TIMEOUT=5000
DATABASE_TIMEOUT=10000
TEST_TIMEOUT=30000
