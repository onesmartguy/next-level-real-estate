# Production Environment Configuration
# Copy this file to terraform.tfvars and fill in your actual values
# terraform.tfvars is gitignored and should NEVER be committed

# ==============================================================================
# AWS Configuration
# ==============================================================================

aws_region = "us-west-2"

# AWS Secrets Manager
use_aws_secrets_manager = true

# External Secrets Operator (sync AWS secrets to Kubernetes)
use_external_secrets_operator = true
external_secrets_role_arn     = "arn:aws:iam::ACCOUNT_ID:role/external-secrets-role"

# Secret Rotation (recommended for production)
enable_secret_rotation = true
rotation_lambda_arn    = "arn:aws:lambda:us-west-2:ACCOUNT_ID:function:secret-rotation"

# ==============================================================================
# Kubernetes Configuration
# ==============================================================================

kube_context         = "arn:aws:eks:us-west-2:ACCOUNT_ID:cluster/nlre-production"
kubernetes_namespace = "nlre"

# ==============================================================================
# Database Configuration (Production MongoDB Atlas, etc.)
# ==============================================================================

mongodb_uri   = "mongodb+srv://user:pass@production-cluster.mongodb.net/nlre?retryWrites=true&w=majority"
qdrant_url    = "https://qdrant-production.example.com:6333"
redis_url     = "rediss://redis-production.cache.amazonaws.com:6379"
kafka_brokers = "kafka-1.prod:9092,kafka-2.prod:9092,kafka-3.prod:9092"

# ==============================================================================
# Observability
# ==============================================================================

otel_endpoint = "https://otel-collector.prod:4317"

