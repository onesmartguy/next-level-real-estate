# Debug Environment Configuration (Local Kubernetes + ngrok)
# Copy this file to terraform.tfvars and fill in your actual values
# terraform.tfvars is gitignored

# ==============================================================================
# Kubernetes Configuration
# ==============================================================================

# Kubernetes context (use one of these):
# - "docker-desktop" (Docker Desktop Kubernetes)
# - "minikube" (Minikube)
# - "k3s" (k3s)
kube_context = "docker-desktop"

# Namespace for deployment
kubernetes_namespace = "nlre"

# ==============================================================================
# ngrok Configuration (for public access)
# ==============================================================================

install_ngrok_ingress = true

# Get your ngrok credentials from: https://dashboard.ngrok.com
ngrok_api_key    = "your_ngrok_api_key"     # From: https://dashboard.ngrok.com/api
ngrok_authtoken  = "your_ngrok_authtoken"   # From: https://dashboard.ngrok.com/get-started/your-authtoken

# Optional: Use a custom ngrok domain (requires ngrok paid plan)
# Leave empty for auto-generated random subdomain
# ngrok_domain = "nlre.ngrok.io"

# Optional: Restrict access by IP (recommended for security)
# allowed_ip_ranges = ["YOUR_HOME_IP/32"]

# Optional: Add OAuth authentication (Google, GitHub, etc.)
# oauth_client_id     = ""
# oauth_client_secret = ""

# ==============================================================================
# REQUIRED: AI Services
